<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_access_alarm_black_24dp" />

        <TextView
            android:id="@+id/text_view_medName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/imageView4"/>

        <TextView
            android:id="@+id/text_view_medTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Time"
            android:textSize="15dp"
            android:layout_below="@id/text_view_medName"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView4"/>

        <TextView
            android:id="@+id/text_view_shape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Shape"
            android:textSize="15dp"
            android:layout_below="@id/text_view_medTime"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView4"/>

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="Description"
            android:textSize="15dp"
            android:layout_below="@id/text_view_shape"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imageView4"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>